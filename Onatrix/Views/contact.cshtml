@using Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Cms.Core.Models.PublishedContent

@{
    Layout = "mainLayout.cshtml";
    ViewBag.title = Model?.Value("pageTitle") ?? null;
}

@{
    var renderPartners = Model?.Value<bool>("renderPartners");
    var pageLayout = Model?.Value<BlockGridModel>("pageLayout"); 
    var formLayout = Model?.Value<BlockGridModel>("formLayout"); 
}

@* ------ navigation section------ *@
@await Html.PartialAsync("~/Views/Partials/NavigationPartial.cshtml")

@await Html.GetBlockGridHtmlAsync(pageLayout)
@await Html.GetBlockGridHtmlAsync(formLayout)

@if (renderPartners == true) {
    @* ------ partners section------ *@
    @await Html.PartialAsync("~/Views/Partials/Sections/PartnersPartial.cshtml")
}


