@using Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels
@using Umbraco.Cms.Core.PropertyEditors.ValueConverters

@{
    var headlineContent = Model?.Content.Value<string>("headlineContent");
    var centerText = Model?.Content.Value<bool?>("centerText");
    var textColor = Model?.Content.Value<ColorPickerValueConverter.PickedColor>("textColor")?.Label.ToLower() ?? null;
}

@if (!string.IsNullOrEmpty(headlineContent))
{
    <h3 class="@($"{textColor} {(centerText == true ? "center-text" : "")}")">@headlineContent</h3>
}
